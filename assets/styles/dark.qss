/* ============================================
   LocalPDF — Dark Theme (SwiftUI-Inspired)
   ============================================ */

/* === Global === */
QMainWindow {
    background-color: #1C1C1E;
}

/* === Sidebar === */
#sidebar {
    background-color: #2C2C2E;
    border-right: 1px solid #38383A;
}

#sidebar QLabel#appTitle {
    color: #FFFFFF;
    font-size: 18px;
    font-weight: bold;
    padding: 20px 20px 2px 20px;
}

#sidebar QLabel#appSubtitle {
    color: #8E8E93;
    font-size: 10px;
    padding: 0px 20px 12px 20px;
    letter-spacing: 0.5px;
}

#sidebar QPushButton.navButton {
    text-align: left;
    padding: 8px 14px;
    margin: 1px 10px;
    border: none;
    font-size: 13px;
    color: #EBEBF5;
    background-color: transparent;
    border-radius: 8px;
}

#sidebar QPushButton.navButton:hover {
    background-color: rgba(255, 255, 255, 0.06);
    color: #FFFFFF;
}

#sidebar QPushButton.navButton[active="true"] {
    background-color: #0A84FF;
    color: #FFFFFF;
    font-weight: 600;
    border-radius: 8px;
}

#sidebar QLabel#versionLabel {
    color: #636366;
    font-size: 10px;
    padding: 8px 20px;
}

/* Sidebar section headers */
#sidebarSection {
    color: #8E8E93;
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 1px;
    padding: 16px 20px 4px 20px;
}

/* === Content Area === */
#contentArea {
    background-color: #1C1C1E;
}

/* === Default Text === */
QLabel {
    color: #EBEBF5;
}

/* === Text Utility Classes === */
QLabel.textSecondary {
    color: #8E8E93;
    font-size: 13px;
}

QLabel.textCaption {
    color: #636366;
    font-size: 12px;
}

QLabel.progressPct {
    color: #FFFFFF;
    font-weight: bold;
    font-size: 13px;
    min-width: 40px;
}

QLabel.resultArrow {
    color: #FFFFFF;
    font-size: 16px;
    font-weight: bold;
}

#resultCard QLabel.resultReduction {
    color: #30D158;
    font-weight: bold;
    font-size: 13px;
}

/* === Section Headers === */
QLabel.sectionTitle {
    color: #FFFFFF;
    font-size: 24px;
    font-weight: bold;
    padding-bottom: 2px;
}

QLabel.sectionSubtitle {
    color: #8E8E93;
    font-size: 13px;
    padding-bottom: 16px;
}

/* === Drop Zone === */
#dropZone {
    border: none;
    border-radius: 16px;
    background-color: #2C2C2E;
    min-height: 140px;
}

#dropZone:hover {
    background-color: #3A3A3C;
}

#dropZone QLabel {
    color: #8E8E93;
    font-size: 13px;
}

#dropZone QLabel#dropIcon {
    font-size: 32px;
    color: #636366;
}

#multiDropZone {
    border: none;
    border-radius: 16px;
    background-color: #2C2C2E;
    min-height: 120px;
}

#multiDropZone:hover {
    background-color: #3A3A3C;
}

#multiDropZone QLabel {
    color: #8E8E93;
    font-size: 13px;
}

#multiDropZone QLabel#dropIcon {
    font-size: 32px;
    color: #636366;
}

/* === File Info === */
QLabel.fileInfo {
    color: #FFFFFF;
    font-size: 13px;
    padding: 8px 0px;
}

QLabel.fileSize {
    color: #0A84FF;
    font-size: 13px;
    font-weight: 600;
}

/* === Buttons === */

/* Primary — capsule */
QPushButton#primaryButton {
    background-color: #0A84FF;
    color: #FFFFFF;
    border: none;
    border-radius: 22px;
    padding: 14px 32px;
    font-size: 15px;
    font-weight: 600;
    min-height: 20px;
}

QPushButton#primaryButton:hover {
    background-color: #409CFF;
}

QPushButton#primaryButton:pressed {
    background-color: #0060CC;
}

QPushButton#primaryButton:disabled {
    background-color: #3A3A3C;
    color: #636366;
}

/* Secondary */
QPushButton.secondaryButton {
    background-color: #3A3A3C;
    color: #EBEBF5;
    border: none;
    border-radius: 10px;
    padding: 8px 18px;
    font-size: 13px;
}

QPushButton.secondaryButton:hover {
    background-color: #48484A;
}

/* Preset buttons */
QPushButton.presetButton {
    background-color: #3A3A3C;
    color: #EBEBF5;
    border: 1.5px solid #48484A;
    border-radius: 10px;
    padding: 8px 16px;
    font-size: 12px;
}

QPushButton.presetButton:hover {
    background-color: #1A3A5C;
    border-color: #0A84FF;
    color: #409CFF;
}

QPushButton.presetButton:checked {
    background-color: #1A3A5C;
    border-color: #0A84FF;
    color: #409CFF;
    font-weight: 600;
}

/* Cancel */
QPushButton#cancelButton {
    background-color: transparent;
    color: #FF453A;
    border: 1.5px solid #FF453A;
    border-radius: 10px;
    padding: 6px 18px;
    font-size: 12px;
}

QPushButton#cancelButton:hover {
    background-color: rgba(255, 69, 58, 0.12);
}

/* === Progress Bar === */
QProgressBar {
    border: none;
    border-radius: 3px;
    background-color: #3A3A3C;
    height: 6px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #0A84FF;
    border-radius: 3px;
}

/* === Result Card === */
#resultCard {
    background-color: #1B3B1B;
    border: 1px solid #2E7D32;
    border-radius: 16px;
    padding: 20px;
}

#resultCard QLabel.resultTitle {
    color: #30D158;
    font-size: 15px;
    font-weight: bold;
}

#resultCard QLabel.resultValue {
    color: #FFFFFF;
    font-size: 14px;
}

/* === Inputs === */
QDoubleSpinBox, QSpinBox {
    border: 1px solid #48484A;
    border-radius: 10px;
    padding: 8px 12px;
    font-size: 14px;
    background-color: #3A3A3C;
    color: #FFFFFF;
    min-width: 80px;
}

QDoubleSpinBox:focus, QSpinBox:focus {
    border-color: #0A84FF;
}

QLineEdit {
    border: 1px solid #48484A;
    border-radius: 10px;
    padding: 10px 14px;
    font-size: 13px;
    background-color: #3A3A3C;
    color: #FFFFFF;
}

QLineEdit:focus {
    border-color: #0A84FF;
}

/* === Group Box (Card style) === */
QGroupBox {
    font-size: 14px;
    font-weight: 600;
    color: #FFFFFF;
    background-color: #2C2C2E;
    border: none;
    border-radius: 16px;
    margin-top: 12px;
    padding: 20px 16px 16px 16px;
    padding-top: 28px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 16px;
    color: #FFFFFF;
}

/* === Radio & Checkbox === */
QRadioButton {
    font-size: 13px;
    color: #EBEBF5;
    spacing: 8px;
    padding: 4px;
}

QCheckBox {
    font-size: 13px;
    color: #EBEBF5;
    spacing: 8px;
    padding: 4px;
}

/* === Status Indicators === */
QLabel.statusGreen {
    color: #30D158;
    font-size: 12px;
    font-weight: 500;
}

QLabel.statusRed {
    color: #FF453A;
    font-size: 12px;
    font-weight: 500;
}

/* === Scroll Area === */
QScrollArea {
    border: none;
    background-color: transparent;
}

QScrollArea > QWidget > QWidget {
    background-color: transparent;
}

/* Scrollbar */
QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    margin: 4px 2px;
}

QScrollBar::handle:vertical {
    background-color: rgba(255, 255, 255, 0.15);
    min-height: 30px;
    border-radius: 3px;
}

QScrollBar::handle:vertical:hover {
    background-color: rgba(255, 255, 255, 0.3);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: transparent;
    height: 8px;
    margin: 2px 4px;
}

QScrollBar::handle:horizontal {
    background-color: rgba(255, 255, 255, 0.15);
    min-width: 30px;
    border-radius: 3px;
}

QScrollBar::handle:horizontal:hover {
    background-color: rgba(255, 255, 255, 0.3);
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* === File List === */
#fileListWidget {
    border: none;
    border-radius: 12px;
    background-color: #2C2C2E;
}

QFrame.fileRow {
    background-color: transparent;
    border-bottom: 1px solid #38383A;
}

QFrame.fileRow:hover {
    background-color: #3A3A3C;
}

QLabel.fileRowIndex {
    color: #636366;
    font-size: 12px;
}

QLabel.fileName {
    color: #FFFFFF;
    font-size: 13px;
}

QLabel.fileRowSize {
    color: #8E8E93;
    font-size: 12px;
}

/* === Status Badges === */
QLabel.statusPending {
    color: #8E8E93;
    font-size: 11px;
}

QLabel.statusProcessing {
    color: #0A84FF;
    font-size: 11px;
    font-weight: 600;
}

QLabel.statusDone {
    color: #30D158;
    font-size: 11px;
    font-weight: 600;
}

QLabel.statusError {
    color: #FF453A;
    font-size: 11px;
    font-weight: 600;
}

/* === Row Actions === */
QPushButton.rowAction {
    background-color: transparent;
    border: none;
    color: #636366;
    font-size: 12px;
    padding: 4px;
    border-radius: 6px;
}

QPushButton.rowAction:hover {
    color: #0A84FF;
    background-color: #1A3A5C;
}

QPushButton.rowActionRemove {
    background-color: transparent;
    border: none;
    color: #636366;
    font-size: 12px;
    padding: 4px;
    border-radius: 6px;
}

QPushButton.rowActionRemove:hover {
    color: #FF453A;
    background-color: rgba(255, 69, 58, 0.12);
}

/* === Helper Text === */
QLabel.helperText {
    color: #636366;
    font-size: 11px;
    font-style: italic;
}

QLabel.pageInfo {
    color: #0A84FF;
    font-size: 14px;
    font-weight: 600;
    padding: 4px 0px;
}

/* === Text Edit (OCR output) === */
QTextEdit {
    border: 1px solid #48484A;
    border-radius: 12px;
    padding: 14px;
    font-size: 13px;
    font-family: "SF Mono", "Menlo", monospace;
    background-color: #2C2C2E;
    color: #FFFFFF;
}

/* === Combo Box === */
QComboBox {
    border: 1px solid #48484A;
    border-radius: 10px;
    padding: 8px 14px;
    font-size: 13px;
    background-color: #3A3A3C;
    color: #FFFFFF;
    min-width: 120px;
}

QComboBox:focus {
    border-color: #0A84FF;
}

QComboBox::drop-down {
    border: none;
    padding-right: 10px;
}

QComboBox QAbstractItemView {
    background-color: #2C2C2E;
    border: 1px solid #48484A;
    border-radius: 10px;
    selection-background-color: #1A3A5C;
    selection-color: #409CFF;
    color: #FFFFFF;
    padding: 4px;
}

/* === Slider === */
QSlider::groove:horizontal {
    border: none;
    height: 4px;
    background-color: #48484A;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #FFFFFF;
    border: 2px solid #0A84FF;
    width: 18px;
    height: 18px;
    margin: -8px 0;
    border-radius: 10px;
}

QSlider::sub-page:horizontal {
    background-color: #0A84FF;
    border-radius: 2px;
}

/* === Menu Bar === */
QMenuBar {
    background-color: #1C1C1E;
    border-bottom: 1px solid #38383A;
    color: #FFFFFF;
}

QMenuBar::item {
    padding: 6px 12px;
    border-radius: 6px;
    color: #FFFFFF;
}

QMenuBar::item:selected {
    background-color: rgba(255, 255, 255, 0.1);
}

QMenu {
    background-color: #2C2C2E;
    border: 1px solid #48484A;
    border-radius: 10px;
    padding: 4px;
    color: #FFFFFF;
}

QMenu::item {
    padding: 6px 24px;
    border-radius: 6px;
    color: #FFFFFF;
}

QMenu::item:selected {
    background-color: #0A84FF;
    color: #FFFFFF;
}

/* === Dialog === */
QDialog {
    background-color: #1C1C1E;
}

QMessageBox {
    background-color: #2C2C2E;
}

QMessageBox QLabel {
    color: #FFFFFF;
    font-size: 13px;
}

/* === Edit View Page Card === */
QFrame[class="editPageCard"] {
    background-color: #2C2C2E;
    border: 1px solid #48484A;
    border-radius: 4px;
    padding: 8px;
}

/* === Signature Canvas === */
QWidget[class="signatureCanvas"] {
    background-color: #2C2C2E;
    border: 2px solid #48484A;
    border-radius: 8px;
}

/* === Tab Widget (Signature Dialog) === */
QTabWidget::pane {
    border: 1px solid #48484A;
    border-radius: 8px;
    background-color: #2C2C2E;
}

QTabBar::tab {
    background-color: #3A3A3C;
    border: none;
    padding: 8px 20px;
    font-size: 13px;
    color: #EBEBF5;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

QTabBar::tab:selected {
    background-color: #2C2C2E;
    color: #0A84FF;
    font-weight: 600;
}
